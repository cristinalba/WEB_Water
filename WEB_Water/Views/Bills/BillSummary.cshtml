@model IEnumerable<WEB_Water.Data.Entities.Bill>

@{
    ViewData["Title"] = "BillSummary";
}

<h1>BillSummary</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reader.ReaderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reading.Begin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reading.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reading.ValueOfConsume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueToPay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BillDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueToPay)
            </td>
