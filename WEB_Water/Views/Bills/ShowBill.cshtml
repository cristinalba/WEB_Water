@model WEB_Water.Data.Entities.Bill

@{ 
    ViewData["Title"] = "Bill";
    Layout = null; 
 }



<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Bill</title>
    <meta charset="utf-8">
    
    <link rel="stylesheet" href="~/css/BillStyle.css" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" >
    
</head>
<body>

    <!--Bill Start-->
    <div class="page-content container">
        <div class="page-header text-blue-d2">
            <h1 class="page-title text-secondary-d1">
                Invoice
                <small class="page-info">
                    <i class="fa fa-angle-double-right text-80"></i>
                    ID: #@Model.Id#
                </small>
            </h1>
        </div>

        <div class="container px-0">
            <div class="row mt-4">
                <div class="col-12 col-lg-10 offset-lg-1">
                    <!-- .row -->

                    <hr class="row brc-default-l1 mx-n1 mb-4" />

                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <span class="text-sm text-grey-m2 align-middle">Name:</span>
                                <span class="text-600 text-110 text-blue align-middle">@Model.User.FullName</span>
                            </div>
                            <div>
                                <span class="text-sm text-grey-m2 align-middle">Email:</span>
                                <span class="text-600 text-110 text-blue align-middle">@Model.User.Email</span>
                            </div>

                            <div>
                                <span class="text-sm text-grey-m2 align-middle">Address:</span>
                                <span class="text-600 text-110 text-blue align-middle">@Model.Reader.AddressName</span>
                            </div>

                            <div>
                                <span class="text-sm text-grey-m2 align-middle">Telephone:</span>
                                <span class="text-600 text-110 text-blue align-middle">@Model.User.PhoneNumber</span>
                            </div>

                        </div>

                        <!-- /.col -->

                        <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                            <hr class="d-sm-none" />
                            <div class="text-grey-m2">
                                <div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
                                    Invoice
                                </div>

                                <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">ID:</span>  #@Model.Id#</div>

                                <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Start of period:</span>@Model.Reading.Begin</div>

                                <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">End of period:</span> @Model.Reading.End</div>
                            </div>
                        </div>
                        <!-- /.col -->

                    </div>

                    <div class="mt-4">
                        <div class="row text-600 text-white bgc-default-tp1 py-25">
                            <div class="col-9 col-sm-5">Reader Name</div>
                            <div class="d-none d-sm-block col-4 col-sm-2">Level of Consume</div>
                            <div class="d-none d-sm-block col-sm-2">Value of Consumption in m³</div>
                            <div class="col-2">Total (€)</div>
                        </div>

                        <div class="text-95 text-secondary-d3">
                            <div class="row mb-2 mb-sm-0 py-25">
                                <div class="col-9 col-sm-5">@Model.Reader.ReaderName</div>

                                @if (Model.Reading.ValueOfConsumption <= 5)
                                {
                                    <div class="d-none d-sm-block col-2">1</div>
                                }
                                @if (Model.Reading.ValueOfConsumption > 5 && Model.Reading.ValueOfConsumption <= 15)
                                {
                                    <div class="d-none d-sm-block col-2">2</div>
                                }
                                @if (Model.Reading.ValueOfConsumption > 15 && Model.Reading.ValueOfConsumption <= 25)
                                {
                                    <div class="d-none d-sm-block col-2">3</div>
                                }
                                @if (Model.Reading.ValueOfConsumption > 25)
                                {
                                    <div class="d-none d-sm-block col-2">4</div>
                                }

                            
                                <div class="d-none d-sm-block col-2 text-95">@Model.Reading.ValueOfConsumption</div>
                                <div class="col-2 text-secondary-d2">@Math.Round((decimal)Model.ValueToPay,2)</div>
                            </div>
                        </div>
                    <hr />
                   


                        <div class="row mt-3">
                            <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                                <span class="text-600 text-110 align-middle">Way of payment : Multibanco</span>
                            </div>

                            <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                                <div class="row my-2">
                                    <div class="col-7 text-right">
                                        Entity
                                    </div>
                                    <div class="col-5">
                                        <span class="text-120 text-secondary-d1">1234</span>
                                    </div>
                                </div>

                                <div class="row my-2">
                                    <div class="col-7 text-right">
                                        Reference
                                    </div>
                                    <div class="col-5">
                                        <span class="text-110 text-secondary-d1">1111111111</span>
                                    </div>
                                </div>

                                <div class="row my-2 align-items-center bgc-primary-l3 p-2">
                                    <div class="col-7 text-right">
                                        Total Amount (€)
                                    </div>
                                    <div class="col-5">
                                        <span class="text-150 text-success-d3 opacity-2"> @Math.Round((decimal)Model.ValueToPay, 2) </span>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!--Bill End-->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>