@*@model WEB_Water.Data.Entities.Reader*@
@model WEB_Water.Models.AddReaderViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Register new reader:</h1>
<div class="text-success">
    <center>
        <p>
            @ViewBag.Message
        </p>
    </center>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReaderName" class="control-label"></label>
                <input asp-for="ReaderName" class="form-control" />
                <span asp-validation-for="ReaderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressName" class="control-label"></label>
                <input asp-for="AddressName" class="form-control" />
                <span asp-validation-for="AddressName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ejs-datepicker ejs-for="Installation" id="datetimepicker"  format="yyyy-MM-dd" placeholder="Installation date" max="@DateTime.Now.AddYears(0)" floatLabelType="Auto" cssClass="e-outline">

                </ejs-datepicker>
                <span asp-validation-for="Installation" class="alert-danger"></span>
       
            </div>


            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
