@model WEB_Water.Data.Entities.Reader

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Reader</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ReaderName" class="control-label"></label>
                <input asp-for="ReaderName" class="form-control" />
                <span asp-validation-for="ReaderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressName" class="control-label"></label>
                <input asp-for="AddressName" class="form-control" />
                <span asp-validation-for="AddressName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ejs-datepicker ejs-for="Installation" id="datetimepicker" format="yyyy-MM-dd" placeholder="Installation date" max="@DateTime.Now.AddYears(-1)" floatLabelType="Auto" cssClass="e-outline">

                </ejs-datepicker>
                <span asp-validation-for="Installation" class="alert-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


