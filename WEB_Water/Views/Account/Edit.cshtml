@model WEB_Water.Models.EditUserWithImageViewModel

@{ ViewData["Title"] = "Edit"; }

<div class="text-success">
    <center>
        <p>
            @ViewBag.Message
        </p>
    </center>
</div>

<main id="main">

   
        <div class="container">
            <br /><br />
            <center><h2>Edit User</h2></center>

            <div>
                <h4>User:</h4>
                <hr />
                <div class="row">

                    <div class="col-md-4">
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <input type="hidden" asp-for="ImageUrl" />
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <b><label asp-for="FirstName" class="control-label"></label></b>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <b><label asp-for="LastName" class="control-label"></label></b>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group d-none">
                                <label asp-for="UserName">Username</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Nif">NIF</label>
                                <input asp-for="Nif" class="form-control" />
                                <span asp-validation-for="Nif" class="text-warning"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsCustomer" /> @Html.DisplayNameFor(model => model.IsCustomer)
                                </label>
                            </div>

                            <div class="form-group">
                                <label asp-for="ImageFile" class="control-label"></label>
                                <input asp-for="ImageFile" class="form-control" type="file" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>

                            <br />

                            <div class="form-group">
                                <input type="submit" value="Update" class="btn btn-primary" />
                                @if (Model.IsCustomer == true)
                                {
                                    <a asp-action="Index" class="btn btn-success">Back to list</a>
                                }
                                else
                                {
                                    <a asp-action="IndexOthers" class="btn btn-success">Back to list</a>
                                }

                            </div>
                        </form>
                    </div>
                    <div class="col-12 col-sm-auto mb-3">
                        <div class="mx-auto" style="width: 300px;">
                            <div class="d-flex justify-content-center align-items-center rounded" style="height: 450px; background-color: rgb(233, 236, 239);">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:300px; height:450px; max-width:100%; height:auto">
                                }
                                else
                                {
                                    <img src="/images/users/avatar1.jpg" id="imgpreview" alt="Image" style="width:300px; height:450px; max-width:100%; height:auto">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  
</main><!-- End #main -->



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
