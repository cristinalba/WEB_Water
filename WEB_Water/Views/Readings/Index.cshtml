@model IEnumerable<WEB_Water.Data.Entities.Reading>

@{
    ViewData["Title"] = "Index";
}

<h1>List of readings:</h1>

<p>
    <a asp-action="Create">Register new reading</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader.ReaderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Begin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDateNewReading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueOfConsume)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.BillIssued)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reader.ReaderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Begin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDateNewReading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueOfConsume)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.BillIssued)
            </td>*@
            <td>
                 @if (item.BillIssued == true)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-outline-primary far fa-edit disabled"></a>
                    <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-outline-success fas fa-info-circle"></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-outline-danger fas fa-trash-alt disabled"></a>
                    <span><i class="fas fa-check"></i></span>

                }
                else
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-outline-primary far fa-edit disabled"></a>
                    <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-outline-success fas fa-info-circle"></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-outline-danger fas fa-trash-alt disabled"></a>
                    @if (this.User.IsInRole("Admin"))
                    {
                    <a asp-action="CalculateBill" asp-controller="Bills" asp-route-id="@item.Id" title="Generate Bill" class="btn btn-outline-warning fas fa-calculator"></a>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<br />
